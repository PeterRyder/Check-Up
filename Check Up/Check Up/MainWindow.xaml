<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cm="clr-namespace:System.ComponentModel;assembly=System"
        xmlns:chartingToolkit="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit" xmlns:Custom="http://schemas.microsoft.com/wpf/2008/toolkit" x:Name="mainWindow" x:Class="Check_Up.MainWindow"
        Title="Check Up" Height="718" Width="1227" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <cm:BackgroundWorker x:Name="backgroundWorker" x:Key="backgroundWorker"
        DoWork="BackgroundWorker_DoWork"
        RunWorkerCompleted="BackgroundWorker_RunWorkerCompleted" WorkerReportsProgress="True" WorkerSupportsCancellation="True" ProgressChanged="backgroundWorker_ProgressChanged"/>
    </Window.Resources>

    <Grid Margin="0" Background="#FF424242">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="308*"/>
            <ColumnDefinition Width="911*"/>
        </Grid.ColumnDefinitions>
        <ListView x:Name="listview_warnings" ToolTip="Shows Warnings" HorizontalAlignment="Left" Width="284" Height="489" Margin="10,184,0,13" Background="#FFE5E5E5">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Warnings"/>
                    <GridViewColumn Header="Errors"/>
                </GridView>
            </ListView.View>
        </ListView>
        <TabControl Height="140" Margin="14,26,14,0" VerticalAlignment="Top">
            <TabItem Header="Chart Control">
                <Grid Background="#FFE5E5E5">
                    <Button x:Name="button_gatherData" Content="Gather Data" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="103" Click="button_gatherData_Click"/>
                    <Button x:Name="button_stopMonitoring" Content="Stop Monitoring" HorizontalAlignment="Left" Margin="10,37,0,0" VerticalAlignment="Top" Width="103" Click="button_stopMonitoring_Click"/>
                    <Button x:Name="button_resetChart" Content="Reset Chart" HorizontalAlignment="Left" Margin="10,64,0,0" VerticalAlignment="Top" Width="103" Click="button_resetChart_Click"/>
                </Grid>
            </TabItem>
            <TabItem Header="Script Control">
                <Grid Background="#FFE5E5E5">
                    <Button x:Name="button_checkScripts" Content="Check Scripts" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="103" Click="button_checkScripts_Click"/>
                </Grid>
            </TabItem>
            <TabItem Header="Process Control">
                <Grid Background="#FFE5E5E5" Margin="0,0,0,63">
                    <Button x:Name="button_analyzeProcesses" Content="Analyze Processes" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="103"/>

                </Grid>
            </TabItem>
        </TabControl>
        <ProgressBar x:Name="progressBar" HorizontalAlignment="Right" Height="18" Margin="0,0,123,42" VerticalAlignment="Bottom" Width="694" Grid.Column="1" Background="#FFE5E5E5"/>
        <chartingToolkit:Chart x:Name="chart" Grid.Column="1" HorizontalAlignment="Left" Margin="10,26,0,0" Title="Performance" VerticalAlignment="Top" Height="578" Width="901" BorderBrush="#FFE5E5E5" Foreground="Black" Background="#FFE5E5E5">
            <chartingToolkit:Chart.DataContext>
                <PointCollection>1,10 2,20 3,30 4,40</PointCollection>
            </chartingToolkit:Chart.DataContext>
        </chartingToolkit:Chart>
    </Grid>

</Window>
