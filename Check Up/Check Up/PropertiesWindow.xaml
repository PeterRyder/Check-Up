<Window x:Name="properties_window" x:Class="Check_Up.Properties"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Properties" Height="425" Width="673" Topmost="True">
    <Grid>
        <TabControl HorizontalAlignment="Left" Height="196" Margin="10,10,0,0" VerticalAlignment="Top" Width="421">
            <TabItem Header="Data to Gather">
                <Grid Background="#FFE5E5E5">
                    <CheckBox Content="CPU" HorizontalAlignment="Left" Margin="10,11,0,0" VerticalAlignment="Top"/>
                    <CheckBox Content="Memory" HorizontalAlignment="Left" Margin="10,32,0,0" VerticalAlignment="Top"/>
                    <CheckBox Content="Network" HorizontalAlignment="Left" Margin="10,53,0,0" VerticalAlignment="Top"/>
                    <CheckBox Content="Disk IO" HorizontalAlignment="Left" Margin="10,74,0,0" VerticalAlignment="Top"/>
                    <TextBox HorizontalAlignment="Right" Height="23" Margin="281,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="60"/>
                    <Label Content="Data Polling Time (sec)" HorizontalAlignment="Left" Margin="145,9,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.684,-0.115"/>
                    <TextBox HorizontalAlignment="Right" Height="23" Margin="0,38,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="1"/>
                    <Label Content="Data Polling Interval (sec)" HorizontalAlignment="Left" Margin="132,40,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.684,-0.115"/>
                </Grid>
            </TabItem>
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
        <Grid HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10" Height="94">
            <Button x:Name="button_OK" Content="OK" HorizontalAlignment="Left" Margin="10,68,0,0" VerticalAlignment="Top" Width="75"/>
            <Button x:Name="button_Cancel" Content="Cancel" HorizontalAlignment="Left" Margin="90,68,0,0" VerticalAlignment="Top" Width="75"/>
        </Grid>

    </Grid>
</Window>
